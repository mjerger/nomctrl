        { "id" : "orange" , "hex" : "#f29a1f" },
        { "id" : "dorange", "hex" : "#d26a00" },
        { "id" : "morning", "color" : "blue"    },
        { "id" : "day"    , "color" : "blue"    },
        { "id" : "evening", "color" : "orange"  },
        { "id" : "night"  , "color" : "dorange" }
    ],

    "timers" : [
        { "id" : "grow-high", "node" : "grow-high", "on" : "sunrise+3", "off" : "sunset-3", "strict" : true  },
