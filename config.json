        { "id" : "tv-light"     , "device" : "w-tv"    },
        { "id" : "sleep-light"  , "device" : "w-sleep" },
        { "id" : "balcony-light", "device" : "w-balcony" },
        { "id" : "nomframe"     , "device" : "nn-nomframe", "parent" : "divider"}
    ],

    "groups" : [
        { "id" : "living"   , "nodes"  : [ "desk", "plants", "grow", "terra", "stuff-light", "tv-light", "divider", "nomframe" ] },
