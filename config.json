        { "id" : "balcony"  , "nodes"  : [ "balcony-light" ] },
        { "id" : "apartment", "groups" : [ "living", "bed", "balcony"] }
    ],

    "colors" : [
        { "id" : "lime"   , "hex" : "#deff24" },
        { "id" : "blue"   , "hex" : "#656ef2" },
