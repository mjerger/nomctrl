{
    "app" : {
        "port" : 1337
    },

    "ctrl" : {
        "brightness_threshold" : 50
    },

    "devices" : [
        { "id" : "s1", "type" : "tasmota", "host" : "tasmota-s1" },
        { "id" : "s2", "type" : "tasmota", "host" : "tasmota-s2" },
        { "id" : "s3", "type" : "tasmota", "host" : "tasmota-s3" },
        { "id" : "s4", "type" : "tasmota", "host" : "tasmota-s4" },
        { "id" : "s5", "type" : "tasmota", "host" : "tasmota-s5" },
        { "id" : "s6", "type" : "tasmota", "host" : "tasmota-s6" },

        { "id" : "w-desk" , "type" : "wled", "host" : "wled-desk" },
        { "id" : "w-stuff", "type" : "wled", "host" : "wled-stuff" },
        { "id" : "w-tv"   , "type" : "wled", "host" : "wled-tv" },
        { "id" : "w-sleep", "type" : "wled", "host" : "wled-sleep" }
    ],

    "nodes" : [
        { "id" : "strings"    , "device" : "s1", "class" : "light"},
        { "id" : "plants"     , "device" : "s2", "class" : "light" },
        { "id" : "stuff-power", "device" : "s3", "class" : "power" },
        { "id" : "media-power", "device" : "s4", "class" : "power" },
        { "id" : "grow"       , "device" : "s5", "class" : "light" },
        { "id" : "grow-high"  , "device" : "s6", "class" : "light", "parent" : "grow" },

        { "id" : "desk"       , "device" : "w-desk" , "class" : "light" },
        { "id" : "stuff"      , "device" : "w-stuff", "class" : "light", "parent" : "stuff-power" },
        { "id" : "tv-light"   , "device" : "w-tv"   , "class" : "light", "parent" : "media-power" },
        { "id" : "sleep"      , "device" : "w-sleep", "class" : "light" }
    ],

    "groups" : [
        { "id" : "living"   , "nodes"  : [ "desk", "strings", "plants", "stuff", "tv-light" ] },
        { "id" : "bed"      , "nodes"  : [ "sleep" ] },
        { "id" : "kitchen"  , "nodes"  : [ ] },
        { "id" : "bath"     , "nodes"  : [ ] },
        { "id" : "toilet"   , "nodes"  : [ ] },
        { "id" : "hallway"  , "nodes"  : [ ] },
        { "id" : "apartment", "groups" : [ "living", "bed", "kitchen", "bath", "toilet", "hallway" ] }
    ],

    "colors" : [
        { "id" : "evening", "hex" : "#f29a1f" },
        { "id" : "day"    , "hex" : "#ffe2ab" },
        { "id" : "morning", "hex" : "#ffefef" },
        { "id" : "reading", "hex" : "#f29a00" }
    ],

    "timers" : [
        { "id" : "grow", "on" : "10:00", "off" : "22:00", "strict" : true }
    ],

    "actions" : [
        { "id" : "morning",                     "do" : [ "set living on morning 50%", "set bed on morning 20%" ] },
        { "id" : "day"    , "at" : "12:00" ,    "do" : [ "set strings off", "set living day 100", "set bed off" ] },
        { "id" : "evening", "at" : "env.sunset","do" : [ "set living evening 100%", "set plants off" ] },
        { "id" : "night"  , "at" : "22:00" ,    "do" : [ "set living 20%", "set bed evening 20%" ] },
        { "id" : "couch"  ,                     "do" : [ "set living 50%", "set strings off", "set tv stuff evening 100%" ]},
        { "id" : "bed"    ,                     "do" : [ "set apartment off", "set bed reading" ]},
        { "id" : "sleep"  ,                     "do" : "set apartment off"},
        { "id" : "motion_example", "on" : "hallway.motion", "when" : "hallway.brightness < 10", "do" : "set hallway 70 for 5m"}
    ]
}